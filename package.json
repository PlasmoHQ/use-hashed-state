{
  "name": "use-hashed-state",
  "version": "0.4.0",
  "description": "Safely store data in localstorage with an unique key of any type, even a component",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "run-p dev:*",
    "dev:compile": "tsup src/index.ts --watch --sourcemap",
    "dev:test": "jest --watch",
    "build": "tsup src/index.ts --dts-resolve --format esm --minify --clean",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "prepublishOnly": "run-s build"
  },
  "author": "Plasmo Corp. <foss@plasmo.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/PlasmoHQ/use-hashed-state.git"
  },
  "license": "MIT",
  "keywords": [
    "localstorage",
    "react-hook",
    "persisted-state",
    "hashed-state",
    "hashed-keys"
  ],
  "peerDependencies": {
    "react": "^16.8.6 || ^17 || ^18"
  },
  "dependencies": {
    "node-object-hash": "3.0.0"
  },
  "devDependencies": {
    "@jest/globals": "29.5.0",
    "@jest/types": "29.5.0",
    "@plasmohq/prettier-plugin-sort-imports": "workspace:*",
    "@plasmohq/storage": "workspace:*",
    "@testing-library/react": "14.0.0",
    "@types/node": "18.15.12",
    "@types/react": "18.0.37",
    "cross-env": "7.0.3",
    "jest": "29.5.0",
    "jest-environment-jsdom": "29.5.0",
    "prettier": "2.8.7",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rimraf": "5.0.0",
    "ts-jest": "29.1.0",
    "tsup": "6.7.0",
    "typescript": "5.0.4"
  }
}
